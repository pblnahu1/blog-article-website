---

// component import
import Link from "../components/Link.astro"
import Layout from "../layouts/Layout.astro"

---

<Layout title="Page Not Found">
    <div
        class="container"
        style={{
            display: "flex",
            placeItems: "center",
            textAlign: "center",
            gap: "var(--space-sm)",
        }}
    >
        <div>
            <h1 class="h1">Welp, this is akward</h1>
            <p>We seem to have misplaced something...</p>
        </div>
        <Link 
            href="/"
            style="secondary"
            text="Go Home"
            icon={{
                name: "tabler:home",
                side: "right",
            }}
        />
    </div>
</Layout>
