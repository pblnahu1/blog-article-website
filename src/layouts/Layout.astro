---

// component imports
import MainHead from './MainHead.astro';
import Nav from '../components/Nav.astro';
import Footer from '../components/Footer.astro';

// style imports
import "../styles/global.css";

// props
interface Props {
	title?: string;
	description?: string;
}

const { title = "Default Title", description  = "Nothing for describe" } = Astro.props as Props;
---

<!doctype html>
<html lang="en">
  <MainHead title={title} description={description} />
  <body>
	  <Nav />
    <main>
      <slot />
    </main>
	  <Footer />
  </body>
</html>
